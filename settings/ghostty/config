theme = catppuccin-frappe
bold-is-bright = true
window-padding-x = 6
window-padding-y = 6

# emulate a maximized-by-default behavior
window-height = 1000
window-width = 1000

# zellij compatibility (super+shift is used as secondary leader key
# macos-option-as-alt = left
keybind = super+shift+up=unbind
keybind = super+shift+down=unbind
keybind = super+shift+h=unbind
keybind = super+shift+j=unbind
keybind = super+shift+k=unbind
keybind = super+shift+l=unbind
keybind = super+shift+minus=unbind
keybind = super+shift+plus=unbind
# for some reason these also get in the way
keybind = super+plus=unbind
keybind = super+minus=unbind
keybind = super+equal=unbind
