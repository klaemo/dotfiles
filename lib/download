#!/bin/bash

run_download() {
e_header "Downloading applications..."

cd ~/Downloads

echo Chrome
curl -#O https://dl.google.com/chrome/mac/stable/GGRO/googlechrome.dmg

echo BitTorrent Sync
curl -#O http://download.getsyncapp.com/endpoint/btsync/os/osx/track/stable

echo Dropbox
curl -#O https://www.dropbox.com/downloading

echo Sublime Text 3
curl -#O http://c758482.r82.cf2.rackcdn.com/Sublime%20Text%20Build%203065.dmg

echo XCA
curl -#O http://netcologne.dl.sourceforge.net/project/xca/xca/1.1.0/xca-1.1.0.dmg

echo VLC
curl -#O https://get.videolan.org/vlc/2.1.5/macosx/vlc-2.1.5.dmg

echo ImageOptim
curl -#O https://imageoptim.com/ImageOptim.tbz2

echo VirtualBox
curl -#O http://download.virtualbox.org/virtualbox/4.3.20/VirtualBox-4.3.20-96996-OSX.dmg

echo Adobe SourceCodePro
curl -#O https://github.com/adobe-fonts/source-code-pro/archive/1.017R.zip

cd -;
e_success "Downloads completed!"
}
